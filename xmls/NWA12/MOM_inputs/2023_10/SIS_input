ICE_DELTA_EDD_R_ICE = 1.0       !   [perhaps nondimensional?] default = 0.0
                                ! A dreadfully documented tuning parameter for the radiative
                                ! propeties of sea ice with the delta-Eddington radiative
                                ! transfer calculation.
